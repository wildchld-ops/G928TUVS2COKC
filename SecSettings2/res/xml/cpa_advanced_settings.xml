    <ListPreference android:entries="@array/bearer_entries" android:title="@string/bearer" android:key="bearer" android:widgetLayout="@layout/round_more_icon" android:entryValues="@array/bearer_values" />
    <EditTextPreference android:persistent="false" android:singleLine="true" android:title="@string/cpa_dns1" android:key="dns1" android:inputType="date" android:privateImeOptions="inputType=ipAddress" />
    <EditTextPreference android:persistent="false" android:singleLine="true" android:title="@string/cpa_dns2" android:key="dns2" android:inputType="date" android:privateImeOptions="inputType=ipAddress" />
</PreferenceScreen>