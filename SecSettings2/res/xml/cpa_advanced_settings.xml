<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/advanced_network_settings_title" android:key="cpa_apn_edit"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">
    <EditTextPreference android:singleLine="true" android:maxLength="64" android:title="@string/apn_name" android:key="apn_name" android:widgetLayout="@layout/round_more_icon" android:dialogTitle="@string/apn_name" android:inputType="text" />
    <EditTextPreference android:singleLine="true" android:maxLength="64" android:title="@string/apn_apn" android:key="apn_apn" android:widgetLayout="@layout/round_more_icon" android:dialogTitle="@string/apn_apn" android:inputType="textEmailAddress" />
    <EditTextPreference android:singleLine="true" android:maxLength="64" android:title="@string/apn_user" android:key="apn_user" android:widgetLayout="@layout/round_more_icon" android:dialogTitle="@string/apn_user" android:inputType="textEmailAddress" />
    <EditTextPreference android:singleLine="true" android:maxLength="64" android:title="@string/apn_password" android:key="apn_password" android:widgetLayout="@layout/round_more_icon" android:dialogTitle="@string/apn_password" android:inputType="textPassword" />
    <EditTextPreference android:singleLine="true" android:maxLength="160" android:title="@string/apn_http_proxy" android:key="apn_http_proxy" android:widgetLayout="@layout/round_more_icon" android:dialogTitle="@string/apn_http_proxy" android:inputType="textUri" />
    <EditTextPreference android:singleLine="true" android:maxLength="5" android:title="@string/apn_http_port" android:key="apn_http_port" android:widgetLayout="@layout/round_more_icon" android:dialogTitle="@string/apn_http_port" android:inputType="number" />
    <ListPreference android:entries="@array/cpa_auth_entries" android:title="@string/apn_auth_type" android:key="auth_type" android:widgetLayout="@layout/round_more_icon" android:entryValues="@array/cpa_auth_values" />
    <ListPreference android:entries="@array/apn_protocol_entries" android:title="@string/apn_protocol" android:key="apn_protocol" android:widgetLayout="@layout/round_more_icon" android:dialogTitle="@string/apn_protocol" android:entryValues="@array/apn_protocol_values" />
    <EditTextPreference android:singleLine="true" android:maxLength="64" android:title="@string/apn_server" android:key="apn_server" android:widgetLayout="@layout/round_more_icon" android:dialogTitle="@string/apn_server" android:inputType="textUri" />
    <EditTextPreference android:singleLine="true" android:maxLength="64" android:title="@string/apn_mmsc" android:key="apn_mmsc" android:widgetLayout="@layout/round_more_icon" android:dialogTitle="@string/apn_mmsc" android:inputType="textUri" />
    <EditTextPreference android:singleLine="true" android:maxLength="160" android:title="@string/apn_mms_proxy" android:key="apn_mms_proxy" android:widgetLayout="@layout/round_more_icon" android:dialogTitle="@string/apn_mms_proxy" android:inputType="textUri" />
    <EditTextPreference android:singleLine="true" android:maxLength="5" android:title="@string/apn_mms_port" android:key="apn_mms_port" android:widgetLayout="@layout/round_more_icon" android:dialogTitle="@string/apn_mms_port" android:inputType="number" />
    <EditTextPreference android:singleLine="true" android:maxLength="3" android:title="@string/apn_mcc" android:key="apn_mcc" android:widgetLayout="@layout/round_more_icon" android:dialogTitle="@string/apn_mcc" android:inputType="number" />
    <EditTextPreference android:singleLine="true" android:maxLength="3" android:title="@string/apn_mnc" android:key="apn_mnc" android:widgetLayout="@layout/round_more_icon" android:dialogTitle="@string/apn_mnc" android:inputType="number" />
    <EditTextPreference android:singleLine="true" android:title="@string/apn_type" android:key="apn_type" android:widgetLayout="@layout/round_more_icon" android:dialogTitle="@string/apn_type" android:inputType="textNoSuggestions" />
    <ListPreference android:entries="@array/apn_ently_key" android:title="@string/apn_type" android:key="apn_type_list" android:widgetLayout="@layout/round_more_icon" android:dialogTitle="@string/apn_type" android:entryValues="@array/apn_type_key" />
    <ListPreference android:entries="@array/apn_protocol_entries" android:title="@string/apn_roaming_protocol" android:key="apn_roaming_protocol" android:widgetLayout="@layout/round_more_icon" android:dialogTitle="@string/apn_roaming_protocol" android:entryValues="@array/apn_protocol_values" />
