            <TextView android:textSize="@dimen/choose_lock_universal_arrow_help_text_size" android:gravity="center" android:id="@id/headerText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/universal_lock_direction_inital_text" android:layout_centerInParent="true" style="@style/direction_lock_body_text_style" />
        </RelativeLayout>
