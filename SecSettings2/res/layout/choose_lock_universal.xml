        <com.android.settings.widget.BottomBarButton android:id="@id/left_button" android:text="@string/direction_reset" style="@style/SecurityPreferenceButton" />
        <com.android.settings.widget.BottomBarButton android:id="@id/right_button" android:text="@string/direction_continue_string_display" style="@style/SecurityPreferenceButton" />
    </LinearLayout>
</RelativeLayout>